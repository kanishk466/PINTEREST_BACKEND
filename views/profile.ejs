<!DOCTYPE html>
<html lang="en">
  <!-- divinectorweb.com -->
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Responsive User Profile Card using HTML and CSS</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="stylesheets/profilecard.css" />
  </head>
  <body>
    <div class="wrapper">
      <div class="user-card">
        <div class="user-card-img">
          <img
            src="https://blogger.googleusercontent.com/img/b/R29vZ2xl/AVvXsEjxivAs4UknzmDfLBXGMxQkayiZDhR2ftB4jcIV7LEnIEStiUyMygioZnbLXCAND-I_xWQpVp0jv-dv9NVNbuKn4sNpXYtLIJk2-IOdWQNpC2Ldapnljifu0pnQqAWU848Ja4lT9ugQex-nwECEh3a96GXwiRXlnGEE6FFF_tKm66IGe3fzmLaVIoNL/s1600/img_avatar.png"
            alt=""
          />
        </div>
        <div class="user-card-info">
          <h2><%= user.fullname%></h2>
          <p><span>Email:</span><%= user.email%></p>
          <p><span>Username:</span> <%= user.username%></p>
          <p><span>Occupation:</span> Web Developer</p>
          <p>
            <span>About me:</span> Lorem ipsum dolor sit amet, consectetur
            adipiscing elit, sed do eiusmod tempor incididunt ut labore et
            dolore magna aliqua.
          </p>
          <a href="/logout" class="btn btn-danger">Logout</a>

          <form action="/upload" method="post" enctype="multipart/form-data" >
            
            <div class="mb-3">
              <input type="text" name="posttext" placeholder="image text name">
            </div>
            <div class="input-group mb-3">

              <input type="file" class="form-control" name="file">
            
            </div>
            <input type="submit" class="btn btn-success" value="submit"/>
          </form>
        </div>
      </div>
    </div>
    <hr>

   

   


    <div class="container">

      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

        <% user.posts.forEach(function(post){ %>
        <div class="col">
          <div class="card shadow-sm">
            <img src="/images/uploads/<%= post.image%>" class="card-img-top" alt="..." />
            <div class="card-body">
              <p class="card-text"><%= post.posttext %></p>
            
            </div>
          </div>
        </div>
    
        <% })%>
       
        </div>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
